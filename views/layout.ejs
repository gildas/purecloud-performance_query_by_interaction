                    <% console.log("[EJS] Adding organization: %s", organization.name); %>
                    <li><a href="#" data-orgid="<%= organization.id %>"><%= organization.name %> (<%= organization.region %>)</a></li>
                  <% }); %>
                </ul>
              </div>
            </li>
          </ul>
