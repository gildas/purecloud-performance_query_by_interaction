    <link rel='stylesheet' href='/stylesheets/style.css' />
<% } %>
    <script language='javascript'>
      "use strict";

      var purecloud_organizations   = [];
      var purecloud_organization_id = undefined;
      var purecloud_session         = null;

    </script>
  </head>
  <body>
